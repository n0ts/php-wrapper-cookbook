;; Resource Limits
; Maximum execution time of each script, in seconds
max_execution_time = <%= node['php-wrapper']['max_execution_time'] %>
; Maximum amount of time each script may spend parsing request data0
max_input_time = <%= node['php-wrapper']['max_input_time'] %>
; Maximum amount of memory a script may consume
memory_limit = <%= node['php-wrapper']['memory_limit'] %>


;; Error handling and logging
error_reporting = <%= node['php-wrapper']['error_reporting'] %>


;; Data Handling
; Maximum size of POST data that PHP will accept.
post_max_size = <%= node['php-wrapper']['post_max_size'] %>


;; File Uploads
; Maximum allowed size for uploaded files.
upload_max_filesize = <%= node['php-wrapper']['upload_max_filesize'] %>


[Date]
; Defines the default timezone used by the date functions
date.timezone = '<%= node['php-wrapper']['date.timezone'] %>'
